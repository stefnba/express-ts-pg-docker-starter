{
    "name": "starter-ts-express-pg-docker",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon src/server.ts",
        "debug": "nodemon --exec \"node --inspect-brk=0.0.0.0:9229 --require ts-node/register src/server.ts\"",
        "start": "ts-node dist/server.js",
        "copy": "copyfiles -E -u 1 \"src/_db/migration/**\" \"dist\"",
        "clean": "rm -rf dist",
        "build": "npm run clean && tsc -p . && npm run copy",
        "migrate": "postgresql-migrate -d src/_db/migration",
        "docker:build": "scripts/docker/build.sh",
        "docker:prod": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.prod.yml -f docker/docker-compose.deploy.yml --project-directory . up -d --build --remove-orphans",
        "docker:test": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.prod.yml -f docker/docker-compose.test.yml --project-directory . up -d --build",
        "docker:dev": "docker compose -f docker/docker-compose.yml -f docker/docker-compose.dev.yml --project-directory . up -d --build --force-recreate ",
        "deploy": "scripts/ci/deploy.sh"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "dotenv": "^16.0.3",
        "express": "^4.18.1",
        "pg-promise": "^10.12.0",
        "postgresql-migrate": "^2.0.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.14",
        "@types/node": "^18.8.2",
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.20",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.4",
        "copyfiles": "^2.4.1"
    }
}